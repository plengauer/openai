#!/bin/bash -e
prompt="$*"
system_prompt="$AI_SYSTEM_PROMPT"
request="$(jq -n --arg system_prompt "$system_prompt" --arg prompt "$prompt" '{ model: "gpt-4-turbo", messages: [ { role: "system", content: $system_prompt }, { role: "user", content: $prompt } ] }')"
openai "$request" | jq -r '.choices[0].message.content'
